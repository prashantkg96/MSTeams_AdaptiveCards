{
  "type": "AdaptiveCard",
  "speak": "Teams Message Notification",
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Teams Msg Header",
          "weight": "Bolder",
          "size": "Large",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "Script Name",
          "spacing": "None",
          "isSubtle": true,
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Script Execution Summary",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true,
          "spacing": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "The following table shows the status of scheduled script executions across servers. Please review the status and take action if needed.",
          "wrap": true,
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "Medium",
      "items": [
        {
          "type": "ColumnSet",
          "style": "emphasis",
          "columns": [
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Date",
                  "weight": "Bolder",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Server",
                  "weight": "Bolder",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Script Name",
                  "weight": "Bolder",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Status",
                  "weight": "Bolder",
                  "wrap": true
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "2026-01-12",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "PROD-WEB-01",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Backup.ps1",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "✅ Success",
                  "wrap": true,
                  "color": "Good"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "2026-01-12",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "PROD-DB-01",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Cleanup.ps1",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "❌ Failed",
                  "wrap": true,
                  "color": "Attention"
                }
              ]
            }
          ]
        },
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "2026-01-12",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "PROD-APP-01",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "Deploy.ps1",
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "1",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "⏳ Running",
                  "wrap": true,
                  "color": "Warning"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.OpenUrl",
          "title": "Open Folder",
          "url": "https://chatgpt.com/"
        }
      ]
    }
  ]
}
