{
  "type": "AdaptiveCard",
  "speak": "Teams Message Notification",
  "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${STATUS_ICON}",
                  "size": "Large",
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center"
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${Header}",
                  "weight": "Bolder",
                  "size": "Large",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${ServerName} | ${ScriptName}",
                  "spacing": "None",
                  "isSubtle": true,
                  "wrap": true
                }
              ],
              "verticalContentAlignment": "Center"
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${DATE}",
          "weight": "Bolder",
          "size": "Medium",
          "wrap": true,
          "spacing": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "${Summary}",
          "wrap": true,
          "spacing": "Small"
        }
      ]
    },
    {
      "type": "ActionSet",
      "$when": "${SHOW_BUTTON}",
      "actions": [
        {
          "type": "Action.OpenUrl",
          "title": "Open Folder",
          "url": "${ButtonUrl}"
        }
      ]
    }
  ]
}
